{
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "declaration": true,
    "noEmit": true,
    "baseUrl": ".",
    "outDir": "dist"
  },
  "include": ["packages/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
